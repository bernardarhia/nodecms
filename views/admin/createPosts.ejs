<%-include('../layouts/admin_header.ejs')%>
<%-include('../layouts/flashes.ejs')%>

<h1>Create Posts</h1>
<% if (typeof errors !='undefined') {%>
<% errors.forEach(error=>{%>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <h2>  <%=  error.msg %> </h2>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <% }) %>
<%}%>
<form action="/admin/posts/create" method="post" enctype="multipart/form-data">
  <div class="form-group">
    <label for="title">Title</label>
      <input type="text" class="form-control" id="title" placeholder="Post Title" name="title" value="<%= typeof title != 'undefined' ? title : '' %>"
      
    />
  </div>
  <div class="form-group">
    <label for="upload">Upload A Picture</label>
      <input type="file" class="form-control-file" id="title" name="uploader" />
  </div>
  <div class="form-group">
      <label for="status">Category</label>
    <select name="category" id="status" class="form-control">
    <%cateGories.forEach((category)=>{%>
<option value="<%=category.id%>"><%=category.name%></option>
      <%  })%>

    </select>
      </div>
  <div class="form-group">
    <label for="status">Status</label>
    <select name="status" id="status" class="form-control">
      <option value="public">PUBLIC</option>
      <option value="private">PRIVATE</option>
      <option value="draft">DRAFT</option>
    </select>
  </div>

  <div class="form-check">
    <label for="allowCOmments">
      <input
        name="allowComments"
        type="checkbox"
        class="form-check-input"
        id="allowCOmments"
      />
      Allow Comments
    </label>
  </div>

  <div class="form-group">
    <label for="title">Description</label>
    <textarea
      name="description"
      type="text"
      class="form-control"
      id="description"
      placeholder="Description For Post"
      rows="13"
      cols="10"
      ><%= typeof description !== 'undefined' ? description : '' %></textarea>
  </div>
  <button class="btn btn-outline-primary" type="submit">Create Post</button>
</form>

<%-include('../layouts/admin_footer.ejs')%>

